\setbeamertemplate{footline}
{%
  \ifnum\insertframenumber=1%
  \else%
    \leavevmode
    \begin{beamercolorbox}[
      wd=0.3\paperwidth,
      ht=4ex,
      dp=10pt,
      leftskip=\beamer@leftmargin,
    ]{author in head/foot}%
      {\usebeamerfont{section in head/foot}\insertshortauthor} | 
      {\usebeamerfont{section in head/foot}\insertshortdate}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[
      wd=0.4\paperwidth,
      ht=4ex,
      dp=10pt,
      center,
    ]{section in head/foot}%
      \ifx\insertsection\empty%
      \else%
        \usebeamerfont{section in head/foot}\insertsection%
        \ifx\insertsubsection\empty
        \else%
          :~\usebeamerfont{subsection in head/foot}\insertsubsection%
        \fi
      \fi%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[
      wd=0.3\paperwidth,
      ht=4ex,
      dp=10pt,
      rightskip=\beamer@rightmargin,
    ]{frame}%
      \hfill\usebeamerfont{section in head/foot}\insertframenumber%
      \if@showtotalframes
        /\inserttotalframenumber%
      \fi%
    \end{beamercolorbox}%
  \fi%
}

\setbeamertemplate{title page}
{ 
  \ifx\inserttitlegraphic\empty% 
  \else%
  \begin{beamercolorbox}[center, wd=\textwidth]{titlegraphic}
